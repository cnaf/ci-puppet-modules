class mwdevel_users::mw_users {
  include mwdevel_users::commons

  User {
    managehome => true,
    groups     => ['wheel'],
  }

  $user_caberletti = 'caberletti'
  user { $user_caberletti:
    ensure => present,
    name   => $user_caberletti,
  } ->
  ssh_authorized_key { 'caberletti-key':
    ensure => present,
    user   => $user_caberletti,
    key    => '',
    type   => ssh-rsa,
  }

  $user_ceccanti = 'ceccanti'
  user { $user_ceccanti:
    ensure => present,
    name   => $user_ceccanti,
  } ->
  ssh_authorized_key { 'ceccanti-key':
    ensure => present,
    user   => $user_ceccanti,
    key    => '',
    type   => ssh-rsa,
  }

  $user_vianello = 'vianello'
  user { $user_vianello:
    ensure => present,
    name   => $user_vianello,
  } ->
  ssh_authorized_key { 'vianello-key':
    ensure => present,
    user   => $user_vianello,
    key    => '',
    type   => ssh-rsa,
  }
}
